{
  "name": "math-monster-battle-vite",
  "private": true,
  "version": "1.0.0",
  "description": "怪獸風格數學對戰遊戲 — 選擇招式、回答數學題、打倒怪獸！",
  "author": "Chung-Han Hsieh",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "node --test --experimental-specifier-resolution=node",
    "test:coverage": "node --test --experimental-specifier-resolution=node --experimental-test-coverage",
    "test:coverage:gate": "node --test --experimental-specifier-resolution=node --experimental-test-coverage --test-coverage-lines=80 --test-coverage-branches=60 --test-coverage-functions=70",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder --mac --win",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:win": "vite build && electron-builder --win",
    "cap:sync": "vite build && cap sync",
    "cap:open:ios": "cap open ios",
    "release:all": "vite build && electron-builder --mac && cap sync",
    "prerelease": "npm run lint && npm run typecheck && npm test",
    "ship": "bash scripts/ship.sh"
  },
  "dependencies": {
    "@capacitor/core": "^8.1.0",
    "@capacitor/ios": "^8.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.1.0",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0"
  },
  "build": {
    "appId": "com.mathmonster.battle",
    "productName": "數學怪獸大亂鬥",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.education-games",
      "icon": "dist/icon-512.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "dist/icon-512.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
